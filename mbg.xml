<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <context id="DB2Tables" targetRuntime="MyBatis3">
        <commentGenerator>
            <property name="suppressDate" value="true" />
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql:///carrent"
                        userId="root"
                        password="s123654">
        </jdbcConnection>

        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>
<!--        指定javaBean生成的位置-->
        <javaModelGenerator targetPackage="com.lloyvet.bus.domain" targetProject=".\src\main\java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>
<!--        指定映射文件生成的位置-->
        <sqlMapGenerator targetPackage="bus"  targetProject=".\src\main\resources\mapper">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>
<!--        指定dao接口生成的位置-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.lloyvet.bus.mapper"  targetProject=".\src\main\java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>
<!--        指定每个表生成策略-->
        <table tableName="bus_check" domainObjectName="Check"></table>

    </context>
</generatorConfiguration>